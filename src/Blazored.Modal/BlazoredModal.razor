@using Microsoft.AspNetCore.Components.Web

<div class="modal blazored-modal-container @ComponentPosition @(IsVisible ? "blazored-modal-active" : string.Empty)">

    <div class="blazored-modal-overlay" @onclick="HandleBackgroundClick"></div>

    <div class="blazored-modal-wrapper">
        <div class="modal-content">
            @if (!ComponentHideHeader)
            {
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    @if (!ComponentHideCloseButton)
                    {
                        <button type="button" class="close" @onclick="@(() => ModalService.Cancel())">
                            <span>&times;</span>
                        </button>

                    }
                </div>
            }
            <div class="modal-body">
                <CascadingValue Value="this">
                    <CascadingValue Value="@Parameters">
                        @Content
                    </CascadingValue>
                </CascadingValue>
            </div>
        </div>
    </div>
</div>